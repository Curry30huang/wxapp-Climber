.list_item{margin-bottom: 30rpx; border-bottom: 1px solid #ddd;padding-bottom: 20rpx;position: relative;}

.some_list{width: 100%; box-sizing: border-box;padding: 20rpx 30rpx;position: absolute;top:360rpx;padding-bottom: 80rpx;}
page{
  height:100%;
  overflow-x: hidden;
}
.back_img{
  position: fixed;
  top:0;
  left:0;
  width: 100%;
  height: 100%;
}

.list_time{font-size: 24rpx;}
.list_title{font-size: 30rpx; margin: 20rpx 0;}
.list_text{font-size: 24rpx; color: #757677}
.create_time{ color: #6810cb;font-size: 26rpx;margin-right: 20rpx;}
.list_pad{padding-left: 80rpx; transition:  all 0.3s;}
.list_check{position: absolute;top:10rpx;left:0px;width: 40rpx;height: 40rpx;}
/* 打卡的样式 */
.clock_in{display: block;position: absolute; top:10rpx;right:0px;width: 100rpx;height: 100rpx;}

.hide{display: none;}
.show{display: block;}
.bottom_btn_box{position: fixed;bottom: 0; left: 0;width:90%;text-align: right;}
.editor_btn,.delete_btn{display: inline-block;width: 160rpx; line-height: 60rpx; background: #6810cb; color: #fff; font-size: 28rpx;margin: 10rpx 0;}
.editor_btn{margin-right: 20rpx;}
