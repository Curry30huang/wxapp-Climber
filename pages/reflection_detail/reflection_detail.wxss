.editor_box{position: relative;}
.editor_text{
    width: 100%;
    max-height: 800rpx;
    border: 1px solid #ddd;
    margin-top: 20rpx;
}
.btn{
    display: block;
    margin: 60rpx auto;
    width: 80%;
    line-height: 88rpx;
    background: #ff5001;
    color: #fff;
  }
.back{
    position: absolute;
    top: 20rpx;
    left: 30rpx;
    width: 48rpx;
    height: 48rpx;
}
page{height: 100%}
.picker{
    width: 90%;
    border: 1px solid #999;
    margin: 20rpx auto;
    box-sizing: border-box;
    padding: 20rpx;
    border-radius:3rpx;
}
.title_inp{
    width: 90%;
    height: 72rpx;
    border: 1px solid #999;
    margin: 20rpx auto;
    box-sizing: border-box;
    padding:0 20rpx;
    border-radius:6rpx;
}
.content_text{
    width: 90%;
    border: 1px solid #999;
    margin: 0 auto;
    height: 600rpx;
    box-sizing: border-box;
    padding: 20rpx;
    border-radius:6rpx;
}
.model_btn{
    width: 50%;
    display: block;
    margin: 40rpx auto;
    background: #8130dc;
    line-height: 70rpx;
    color: #fff;
}
.modelBack{position: fixed;top:0;left:0;width: 100%;height: 100%;}



