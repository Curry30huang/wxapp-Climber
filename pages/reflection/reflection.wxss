.list_item{margin-bottom: 30rpx; border-bottom: 1px solid #ddd;padding-bottom: 20rpx;position: relative;}
.header{width: 100%; position: relative;background: #6810cb;z-index: 2}
.header_text{display: block; width: 100%;line-height: 88rpx;text-align: center; color: #fff}
.some_list{width: 100%; box-sizing: border-box;padding: 20rpx 30rpx;position: absolute;top:88rpx;padding-bottom: 80rpx;}
page{
  height:100%; 
  overflow-x: hidden; 
}
.back_img{
  position: fixed;
  top:0;
  left:0;
  width: 100%;
  height: 100%;
}
.plus_img{
  position: absolute;
  right:100rpx;
  top:24rpx;
  width:40rpx;
  height:40rpx;
}
.editor_icon{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 30rpx;
  top:24rpx;
}
.list_time{font-size: 24rpx;}
.list_title{font-size: 30rpx; margin: 20rpx 0;}
.list_text{font-size: 24rpx; color: #757677}
.create_time{ color: #62aede;font-size: 26rpx;margin-right: 20rpx;}
.list_pad{padding-left: 80rpx; transition:  all 0.3s;}
.list_check{position: absolute;top:10rpx;left:0px;width: 40rpx;height: 40rpx;}
.hide{display: none;}
.show{display: block;}
.bottom_btn_box{position: fixed;bottom: 2px;width:100%;display: flex;flex-direction: row;justify-content: space-around;}
.bottom_btn_box .editor_btn{display: block; width: 260rpx; height: 80rpx; background: #6810cb; color: #fff; margin-top: 20rpx;}