.list_item{margin-bottom: 30rpx; border-bottom: 1px solid #ddd;padding-bottom: 20rpx;position: relative;}
.header{width: 100%; position: relative;background: linear-gradient(#19AAA7,#46C1B3);z-index: 2}
.header_text{display: block; width: 100%;line-height: 88rpx;text-align: center; color: #fff}
.some_list{width: 100%; box-sizing: border-box;padding: 20rpx 30rpx;position: absolute;top:198rpx;padding-bottom: 80rpx;}
page{
  height:100%; 
  overflow-x: hidden; 
}
.back_img{
  position: fixed;
  top:0;
  left:0;
  width: 100%;
  height: 100%;
}
.plus_img{
  position: absolute;
  right:100rpx;
  top:24rpx;
  width:40rpx;
  height:40rpx;
}
.editor_icon{
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  right: 30rpx;
  top:24rpx;
}
.list_time{font-size: 24rpx;}
.list_title{font-size: 30rpx; margin: 20rpx 0;}
.list_text{font-size: 24rpx; color: #757677}
.create_time{ color: #62aede;font-size: 26rpx;margin-right: 20rpx;}
.list_pad{padding-left: 80rpx; transition:  all 0.3s;}
.list_check{position: absolute;top:10rpx;left:0px;width: 40rpx;height: 40rpx;}
.hide{display: none;}
.show{display: block;}
.bottom_btn_box{position: fixed;bottom: 2px;width:100%;display: flex;flex-direction: row;justify-content: space-around;}
.bottom_btn_box .editor_btn{display: block; width: 260rpx; height: 80rpx; background: #339999; color: #fff; margin-top: 20rpx;}
.searchbar-result{margin-top:0;font-size:14px}.searchbar-result .weui-cell__bd{padding:2px 0 2px 20px;color:var(--weui-FG-1)}.searchbar-result:before{display:none}


.search{
  width: 100%; position: relative;z-index: 2;height: 80rpx;
  display:flex;flex-direction:row;
  margin-top: 20rpx;
}
.search_ipt{
  position: absolute;
  left: 15rpx;
  border-radius: 1rem;
  width: 75%;
  padding-left: 2%;
  float: left;
  height: 80rpx;
  border: 1px solid black;
}
.search_text{
  top:15rpx;
  width: 60rpx;
  height: 40rpx;
  position: absolute;
  right: 30rpx;
}
.search_icon{
  top:15rpx;
  position: absolute;
  right:120rpx;
  width:40rpx;
  height:40rpx;
}
.scroll-view1 {
  width: 100%;
  position: absolute;
  top: 80rpx;
  left: 30rpx;
  background-color: white;
  -moz-box-shadow: 0px 0px 2px #e2e2e2;
  -webkit-box-shadow: 0px 0px 2px #e2e2e2;
  box-shadow: 0px 0px 2px #e2e2e2;
  z-index: 4;
}
.msg-item {
  width: 100%;
}

.weui-search-bar__form {
  position: relative;
}

.user-name {
  width: 100%;
  padding: 20rpx;
  font-size: 33rpx;
  border-bottom: 1px solid #e2e2e2;
}
